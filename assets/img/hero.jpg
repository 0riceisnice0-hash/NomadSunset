<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2400 1350" width="2400" height="1350" preserveAspectRatio="xMidYMid slice">
  <defs>
    <!-- Deep space gradient -->
    <radialGradient id="spaceGradient" cx="50%" cy="40%">
      <stop offset="0%" style="stop-color:#1a1d3a;stop-opacity:1" />
      <stop offset="40%" style="stop-color:#0a0c1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#030408;stop-opacity:1" />
    </radialGradient>
    
    <!-- Nebula glow effects -->
    <radialGradient id="nebulaGold" cx="60%" cy="45%">
      <stop offset="0%" style="stop-color:#d6b45a;stop-opacity:0.4" />
      <stop offset="30%" style="stop-color:#9d7b2f;stop-opacity:0.2" />
      <stop offset="70%" style="stop-color:#7a5f20;stop-opacity:0.05" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:0" />
    </radialGradient>
    
    <radialGradient id="nebulaAurora" cx="30%" cy="60%">
      <stop offset="0%" style="stop-color:#48ffc8;stop-opacity:0.15" />
      <stop offset="40%" style="stop-color:#2a8d6f;stop-opacity:0.08" />
      <stop offset="80%" style="stop-color:#1a4d3f;stop-opacity:0.02" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:0" />
    </radialGradient>
    
    <radialGradient id="centerGlow" cx="50%" cy="50%">
      <stop offset="0%" style="stop-color:#f6e6a6;stop-opacity:0.3" />
      <stop offset="20%" style="stop-color:#d6b45a;stop-opacity:0.15" />
      <stop offset="50%" style="stop-color:#9d7b2f;stop-opacity:0.05" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:0" />
    </radialGradient>
    
    <!-- Star pattern -->
    <pattern id="stars" x="0" y="0" width="200" height="200" patternUnits="userSpaceOnUse">
      <circle cx="15" cy="25" r="0.8" fill="#f6e6a6" opacity="0.9"/>
      <circle cx="45" cy="55" r="0.5" fill="#ffffff" opacity="0.7"/>
      <circle cx="75" cy="15" r="0.6" fill="#d6b45a" opacity="0.8"/>
      <circle cx="120" cy="85" r="0.4" fill="#ffffff" opacity="0.6"/>
      <circle cx="165" cy="45" r="0.7" fill="#f6e6a6" opacity="0.85"/>
      <circle cx="35" cy="140" r="0.5" fill="#ffffff" opacity="0.65"/>
      <circle cx="95" cy="175" r="0.9" fill="#d6b45a" opacity="0.9"/>
      <circle cx="155" cy="125" r="0.4" fill="#ffffff" opacity="0.6"/>
      <circle cx="185" cy="165" r="0.6" fill="#f6e6a6" opacity="0.75"/>
      <circle cx="55" cy="95" r="0.3" fill="#ffffff" opacity="0.5"/>
      <circle cx="140" cy="35" r="0.5" fill="#d6b45a" opacity="0.7"/>
      <circle cx="110" cy="155" r="0.4" fill="#ffffff" opacity="0.55"/>
    </pattern>
    
    <!-- Noise texture -->
    <filter id="noise">
      <feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" seed="2"/>
      <feColorMatrix type="saturate" values="0"/>
      <feBlend in="SourceGraphic" mode="multiply"/>
    </filter>
  </defs>
  
  <!-- Base deep space -->
  <rect width="2400" height="1350" fill="url(#spaceGradient)"/>
  
  <!-- Nebula clouds -->
  <ellipse cx="1440" cy="600" rx="800" ry="500" fill="url(#nebulaGold)" opacity="0.6"/>
  <ellipse cx="720" cy="810" rx="650" ry="450" fill="url(#nebulaAurora)" opacity="0.5"/>
  <ellipse cx="1200" cy="400" rx="400" ry="300" fill="url(#centerGlow)" opacity="0.4"/>
  
  <!-- Star field -->
  <rect width="2400" height="1350" fill="url(#stars)" opacity="0.4"/>
  
  <!-- Prominent stars with glow -->
  <g opacity="0.9">
    <circle cx="1800" cy="300" r="2" fill="#f6e6a6">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="3s" repeatCount="indefinite"/>
    </circle>
    <circle cx="1800" cy="300" r="6" fill="#f6e6a6" opacity="0.3"/>
    
    <circle cx="600" cy="200" r="1.5" fill="#ffffff">
      <animate attributeName="opacity" values="0.7;1;0.7" dur="4s" repeatCount="indefinite"/>
    </circle>
    <circle cx="600" cy="200" r="5" fill="#ffffff" opacity="0.2"/>
    
    <circle cx="300" cy="900" r="1.8" fill="#d6b45a">
      <animate attributeName="opacity" values="0.75;1;0.75" dur="3.5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="300" cy="900" r="5.5" fill="#d6b45a" opacity="0.25"/>
    
    <circle cx="2000" cy="1000" r="1.3" fill="#ffffff">
      <animate attributeName="opacity" values="0.6;0.95;0.6" dur="4.5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="2000" cy="1000" r="4.5" fill="#ffffff" opacity="0.2"/>
  </g>
  
  <!-- Subtle texture overlay -->
  <rect width="2400" height="1350" fill="#000000" opacity="0.03" filter="url(#noise)"/>
  
  <!-- Vignette -->
  <rect width="2400" height="1350" fill="url(#spaceGradient)" opacity="0.2"/>
</svg>
